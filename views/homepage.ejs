    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search functionality
        const searchInput = document.getElementById('menu-search-input');
        const dropdown = document.getElementById('menu-search-dropdown');
        searchInput.addEventListener('input', function(e) {
            const q = searchInput.value.trim();
            if (!q) { dropdown.style.display = 'none'; dropdown.innerHTML = ''; return; }
            fetch('/search?q=' + encodeURIComponent(q))
                .then(res => res.json())
                .then(data => {
                    if (!data.length) { dropdown.style.display = 'none'; dropdown.innerHTML = ''; return; }
                    let html = '<div style="padding:8px 16px; font-weight:bold;">Menu Items</div>';
                    data.forEach(function(item){
                        html += `<div class="search-result-item" data-item-id="${item.item_id}">
                            ${item.item_name} <span style="color:orange; font-size:13px;">(${item.item_category})</span>
                        </div>`;
                    });
                    dropdown.innerHTML = html;
                    dropdown.style.display = 'block';
                });
        });
        // Dropdown click: scroll and highlight menu item
        dropdown.addEventListener('mousedown', function(e) {
            const target = e.target.closest('.search-result-item');
            if (target && target.dataset.itemId) {
                const id = target.dataset.itemId;
                searchInput.value = '';
                dropdown.style.display = 'none';
                // Remove highlight from all menu items
                document.querySelectorAll('.dish-box-wp').forEach(function(el){ el.classList.remove('search-highlight'); });
                // Find the actual menu item in the menu section
                var menuItem = document.querySelector('.dish-box-wp[data-item-id="'+id+'"]');
                if (menuItem) {
                    menuItem.scrollIntoView({behavior:'smooth', block:'center'});
                    menuItem.classList.add('search-highlight');
                    setTimeout(function(){ menuItem.classList.remove('search-highlight'); }, 3000);
                }
            }
        });
        // Hide dropdown if clicking outside
        document.addEventListener('mousedown', function(e){
            if (!dropdown.contains(e.target) && e.target !== searchInput) {
                dropdown.style.display = 'none';
            }
        });
        
        // Cart count synchronization
        const serverCartCount = <%= item_count || 0 %>;
        const countElement = document.getElementById('cart-number-count');
        if (countElement) {
            countElement.textContent = serverCartCount;
        }
        
        // Clear localStorage if server cart is empty
        if (serverCartCount === 0) {
            localStorage.removeItem('cart');
        }
        
        // Force clear old cart data if there's a mismatch
        const localCart = localStorage.getItem('cart');
        if (localCart && serverCartCount === 0) {
            localStorage.removeItem('cart');
            console.log('Cleared stale cart data');
        }
    });
    </script>
